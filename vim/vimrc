  "set rulerformat=%55(%f\ %y%r\ %l:%c\ %p%%%) "55 effective max

  set noruler
  "set rulerformat=%55(%f\ %y%r\ %l:%c\ %p%%%) "55 effective max

  set laststatus=2
  set statusline=
